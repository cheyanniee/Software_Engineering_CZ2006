<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityIndividualUserInvitation"
    android:background="@color/backgroundcolor">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            //android:background="@drawable/map_sample">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.IrisBICS.lonelysg.Activities.ActivityIndividualUserInvitation" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarid"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/imageUser"
        android:layout_marginTop="107dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:src="@drawable/user_sample"
            android:id="@+id/indUserInvImage" />

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageUser"
            android:layout_gravity="center_horizontal"
            android:text="Activity Title"
            android:textSize="27sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activityDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageUser"
            android:layout_gravity="center_horizontal"
            android:text="TODAY, 12PM - 1PM"
            android:textSize="18sp"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@+id/imageUser"
        android:layout_marginTop="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invitationDetails"
                android:orientation="vertical">

                // For Activity Description
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description "
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/darkblue"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/activityDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description of activity"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#D3D3D3"/>
                </LinearLayout>

                // For Location
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/darkblue"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/activityLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#D3D3D3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invitationDetails"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/backButton"
                    android:text="BACK "
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/cancel_icon"
                    android:paddingRight="20dp"
                    android:background="@drawable/borders3"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/deleteInvitation"
                    android:text="DELETE "
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/cancel_icon"
                    android:paddingRight="10dp"
                    android:background="@drawable/borders3"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:id="@+id/editInvitation"
                    android:text="EDIT "
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/chat_white"
                    android:paddingRight="25dp"
                    android:background="@drawable/borders3"

                    />

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>