<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context=".Activities.ActivityChangePassword"
    android:background="@drawable/splash_screen"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="150dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/forgetPwStuff">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/oldPasswordInput"
        android:inputType="textPassword"
        android:hint="Current password"
        android:ems="11"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/newPasswordInput"
        android:inputType="textPassword"
        android:hint="New password"
        android:ems="11"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/confirmPasswordInput"
        android:inputType="textPassword"
        android:hint="Confirm new password"
        android:ems="11"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"/>

</LinearLayout>

    <Button
        android:background="@drawable/borders4"
        android:layout_height="30dp"
        android:layout_width="180dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/changePasswordButton"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="CHANGE PASSWORD"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_below="@+id/forgetPwStuff"/>

    <Button
        android:background="@drawable/borders4"
        android:layout_height="30dp"
        android:layout_width="180dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/forgotPasswordButton"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="FORGOT PASSWORD"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_below="@+id/changePasswordButton"/>

    <Button
        android:background="@drawable/borders4"
        android:layout_height="30dp"
        android:layout_width="180dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/backButton"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="CANCEL"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_below="@+id/forgotPasswordButton"/>

</RelativeLayout>